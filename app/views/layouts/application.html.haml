!!! XML
!!!
%html
  %head
    %title= @page_title || APP_CONFIG[:site_name]
    
    <meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
    <meta http-equiv="imagetoolbar" content="no" />
    <meta name="distribution" content="all" />
    <meta name="robots" content="all" />	
    <meta name="resource-type" content="document" />
    <meta name="MSSmartTagsPreventParsing" content="true" />
    
    = stylesheet_link_tag 'reset', 'base'
    = javascript_include_tag "jquery", "jquery-ui", :defaults
    
  %body
    #container
      #header
        #account
          %h1 Rotavator
          %ul
            - if logged_in?
              %li= link_to 'My account', user_path(current_user)
              %li= link_to 'Logout', logout_path
            - else
              %li= link_to 'Login', login_path
        
        %h2 WACA
        #nav
          %ul
            %li= link_to "Dashboard", dashboard_path
            %li= link_to "My positions", user_positions_path(@current_user)
            %li= link_to "My rotas", user_rotas_path(@current_user)
            %li= link_to "My locations", user_locations_path(@current_user)
            %li= link_to "Create new rota", new_rota_path
            %li= link_to "People", users_path
            %li= link_to "Locations", locations_path
            %li= link_to "Services", services_path
      
      #content
        #main
          = flash_messages
          = yield :layout
        
        #context
          = yield :context
